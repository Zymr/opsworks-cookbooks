user <%= node[:nginx-i2][:user] %>;
worker_processes  <%= node[:nginx-i2][:worker_processes] %>;

error_log  <%= node[:nginx-i2][:log_dir] %>/error.log;
pid        <%= node[:nginx-i2][:pid_file] %>;

events {
  worker_connections  <%= node[:nginx-i2][:worker_connections] %>;
}

http {
  include       <%= node[:nginx-i2][:dir] %>/mime.types;
  default_type  application/octet-stream;

  <% node[:nginx-i2][:log_format].each do |name, format| %>
  log_format <%= name %> <%= format %>;
  <% end %>

  access_log	<%= node[:nginx-i2][:log_dir] %>/access.log;

  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;

  <% if node[:nginx-i2][:keepalive] == "on" %>
  keepalive_timeout  <%= node[:nginx-i2][:keepalive_timeout] %>;
  <% end %>

  gzip  <%= node[:nginx-i2][:gzip] %>;
  gzip_static  <%= node[:nginx-i2][:gzip_static] %>;
  <% if node[:nginx-i2][:gzip] == "on" %>
  gzip_http_version <%= node[:nginx-i2][:gzip_http_version] %>;
  gzip_comp_level <%= node[:nginx-i2][:gzip_comp_level] %>;
  gzip_proxied <%= node[:nginx-i2][:gzip_proxied] %>;
  gzip_types <%= node[:nginx-i2][:gzip_types].join(' ') %>;
  gzip_vary <%= node[:nginx-i2][:gzip_vary] %>;
  gzip_disable "<%= node[:nginx-i2][:gzip_disable] %>";
  <% end %>

  client_max_body_size <%= node[:nginx-i2][:client_max_body_size] %>;

  server_names_hash_bucket_size <%= node[:nginx-i2][:server_names_hash_bucket_size] %>;

  include <%= node[:nginx-i2][:dir] %>/conf.d/*.conf;
  include <%= node[:nginx-i2][:dir] %>/sites-enabled/*;
}
